class monitor;
  
  transaction tr;
  mailbox #(transaction) mbx;
  virtual dff_if vif;
  
  function new(mailbox #(transaction) mbx);
    this.mbx=mbx;
  endfunction
  
  task run();
    tr=new();
    forever begin
      repeat(2) @(posedge vif.clk);
      tr.dout=vif.dout;
      mbx.put(tr);
      tr.display("MON");
    end
  endtask
  
endclass
